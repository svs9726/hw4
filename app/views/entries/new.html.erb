<div class="container mt-4">
  <h1 class="mb-4">New Entry for <%= @place["name"]%></h1>

  <form action="/entries" method="post" enctype="multipart/form-data">
    <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <div class="mb-3">
    <label for="title_input" class="form-label">Title</label>
    <input type="text" name="title" id="title_input" class="form-control">
  </div>

  <div class="mb-3">
    <label for="description_input" class="form-label">Description</label>
    <input type="text" name="description" id="description_input" class="form-control">
  </div>

  <div class="mb-3">
    <label for="occurred_on_input" class="form-label">Occurred On</label>
    <input type="date" name="occurred_on" id="occurred_on_input" class="form-control">
  </div>

  <div class="mb-3">
    <label for="uploaded_image_input" class="form-label">Upload Image</label>
    <input type="file" name="uploaded_image" id="uploaded-image" class="form-control">
  </div>

  <div class="mb-3">
    <label for="image_url" class="form-label">OR Paste Image URL</label>
    <input type="text" name="image_url" id="image_url" class="form-control">
  </div>

    <button type="submit" class="btn btn-primary">Save New Entry</button>

  </form>
</div>